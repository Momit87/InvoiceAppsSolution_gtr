@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee Management</title>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="~/js/main.js"></script>
</head>
<body>
    <h2>Employee CRUD (XHR)</h2>
    <form id="frmEmployee">
        <input type="hidden" id="Id" />
        <label>First: <input id="FirstName" /></label>
        <label>Last: <input id="LastName" /></label>
        <label>Email: <input id="Email" /></label>
        <label>DeptId: <input id="DepartmentId" /></label>
        <label>DesigId: <input id="DesignationId" /></label>
        <button type="submit">Save</button>
    </form>

    <table id="employeesTable" border="1">
        <thead><tr><th>Id</th><th>Name</th><th>Email</th><th>Actions</th></tr></thead>
        <tbody></tbody>
    </table>
</body>
</html>
